<DIDL-Lite
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:upnp="urn:schemas-upnp-org:metadata-1-0/upnp/"
	xmlns="urn:schemas-upnp-org:metadata-1-0/DIDL-Lite/">
    {% for stream in streams %}
        <item id="{{stream.id}}" parentID="{{stream.series_id}}" restricted="true">
            <dc:title>{{stream.name}}</dc:title>
            <dc:date>{{stream.aired_on|to_date}}</dc:date>
            <description>{{stream.overview}}</description>
            <longDescription>{{stream.overview}}</longDescription>
            <upnp:class>object.item.videoItem</upnp:class>
            <res protocolInfo="http-get:*:video/mp4:*" size="{{stream.size}}">
                http://127.0.0.1:5000/dlna/stream/{{stream.id}}
            </res>
        </item>
    {%endfor%}
</DIDL-Lite>

