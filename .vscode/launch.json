    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask Run",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "videobox",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },      
        {
            "name": "Python: Run All Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest", 
            "args": [
            ],
            "justMyCode": true
        },                    
        {
            "name": "Python: Run Sync Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest", 
            "args": [
                "-k test_sync"
            ],
            "justMyCode": true
        },                 
    ]
