#:kivy 2.1.0

# Root widget for the VideoboxApp class
Videobox:
    orientation: "vertical"
    BoxLayout:
        size_hint: 1, None
        Button:
            text: "Sync Now"
            size_hint: None, None
            on_press: app.start_sync()

    PageLayout:
        id: home_nav
        border: 0
        ScrollView:
            do_scroll_x: False
            size_hint_y: 1
            Home:

<Home>: 
    # Bound children
    featured_grid: featured
    # new_grid: new
    # running_grid: running

    size_hint_y: 1
    orientation: "vertical"
    #padding: 20    
    #height: self.minimum_height 

    GridLayout:
        id: featured
        cols: 6
        spacing: 10
        size_hint_y: 1 # Temporary take all the space 
        canvas.before:
            Color:
                rgba: .1, 1, .1, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height        
